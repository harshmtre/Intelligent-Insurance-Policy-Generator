<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @heartblood.object %>
    <h1>Edit <%= @heartblood.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @heartblood.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @heartblood.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="heartblood[id]" value="<%= @heartblood.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Chestpain: </td>
              <td class="itemValue"><input type="text" name="heartblood[chestpain]" value="<%= @heartblood.chestpain %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Rheumaticfever: </td>
              <td class="itemValue"><input type="text" name="heartblood[rheumaticfever]" value="<%= @heartblood.rheumaticfever %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Infraction: </td>
              <td class="itemValue"><input type="text" name="heartblood[infraction]" value="<%= @heartblood.infraction %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Bp: </td>
              <td class="itemValue"><input type="text" name="heartblood[bp]" value="<%= @heartblood.bp %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Breathlessness: </td>
              <td class="itemValue"><input type="text" name="heartblood[breathlessness]" value="<%= @heartblood.breathlessness %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Palpitation: </td>
              <td class="itemValue"><input type="text" name="heartblood[palpitation]" value="<%= @heartblood.palpitation %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Heartattack: </td>
              <td class="itemValue"><input type="text" name="heartblood[heartattack]" value="<%= @heartblood.heartattack %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
