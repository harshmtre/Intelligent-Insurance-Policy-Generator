<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @narcotics.object %>
    <h1>Edit <%= @narcotics.Id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @narcotics.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @narcotics.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="narcotics[Id]" value="<%= @narcotics.Id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Alc quan: </td>
              <td class="itemValue"><input type="text" name="narcotics[Alc_Quan]" value="<%= @narcotics.Alc_Quan %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Alc type: </td>
              <td class="itemValue"><input type="text" name="narcotics[Alc_Type]" value="<%= @narcotics.Alc_Type %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Smoke quan: </td>
              <td class="itemValue"><input type="text" name="narcotics[Smoke_Quan]" value="<%= @narcotics.Smoke_Quan %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Tobacco quan: </td>
              <td class="itemValue"><input type="text" name="narcotics[Tobacco_Quan]" value="<%= @narcotics.Tobacco_Quan %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Drugs quan: </td>
              <td class="itemValue"><input type="text" name="narcotics[Drugs_Quan]" value="<%= @narcotics.Drugs_Quan %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Drugs type: </td>
              <td class="itemValue"><input type="text" name="narcotics[Drugs_Type]" value="<%= @narcotics.Drugs_Type %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
