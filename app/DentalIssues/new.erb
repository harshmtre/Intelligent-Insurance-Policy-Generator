<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Dental Issues <%= @dentalissues.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>
      <%  
                        
                      @financialforms1 = PersonalForm.find(:all)
                       
                        
                      @financialforms1.each do |personalform|
                       $fid2 = personalform.Id
                           
                        end
                          $fid2 = $fid2.to_i
                          
                        
                 %>
  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @dentalissues.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="dentalissues[id]" class="fieldLabel">Id</label>
            <input type="text" id="dentalissues[id]" value="<%=$fid2%>" readonly="readonly" name="dentalissues[id]" <%= placeholder("Id") %> />
          </div>
      
              <ol>
                        <li>
                         Pyrarrhoea ?
                         <input type="radio" id="dentalissues[pyrarrhoea]-1" value="y" name="dentalissues[pyrarrhoea]" <%= placeholder("Pyrarrhoea") %> />
                         <label for="dentalissues[pyrarrhoea]-1">Yes</label>
                         <input type="radio" id="dentalissues[pyrarrhoea]-2" value="n" checked name="dentalissues[pyrarrhoea]" <%= placeholder("Pyrarrhoea") %> />
                         <label for="dentalissues[pyrarrhoea]-2">No</label>
                          </li>
                          <li>    
                           Missing Teeth ?
                          <input type="radio" id="dentalissues[missingteeth]-1" value="y" name="dentalissues[missingteeth]" <%= placeholder("Missingteeth") %> />
                          <label for="dentalissues[missingteeth]-1">Yes</label>
                          <input type="radio" id="dentalissues[missingteeth]-2" value="n" checked name="dentalissues[missingteeth]" <%= placeholder("Missingteeth") %> />
                          <label for="dentalissues[missingteeth]-2">No</label>
                        </li>
             </ol>

      

      <input type="submit" value="Next>>"/>
         <% @c=0
                      
              @abc = PersonalForm.find(:first, :conditions => {'Id' => $fid2})
                @gender=@abc.Gender
                if @gender == 'Female'
                       @c=1
                 else
            
                   @c=0
                
                end  
             if @c==1
               %> <a href="FemaleSection"> Back <%
             else
               %> <a href="FamliyHistory"> Back <%
             end   
         %>
              
    </form>
  </div>

</div>
