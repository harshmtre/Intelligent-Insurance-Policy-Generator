<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @login.user %></h1>
    <a href="<%= url_for :action => :show, :id => @login.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @login.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @login.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="login[user]" class="fieldLabel">User</label>
            <input type="text" id="login[user]" name="login[user]" value="<%= @login.user %>" <%= placeholder( "User" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="login[pass]" class="fieldLabel">Pass</label>
            <input type="text" id="login[pass]" name="login[pass]" value="<%= @login.pass %>" <%= placeholder( "Pass" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="login[status]" class="fieldLabel">Status</label>
            <input type="text" id="login[status]" name="login[status]" value="<%= @login.status %>" <%= placeholder( "Status" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
