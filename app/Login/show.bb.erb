<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @login.user %></h1>
    <%= link_to "Edit", :action => :edit, :id => @login.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">User</td>
        <td class="itemValue"><%= @login.user%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Pass</td>
        <td class="itemValue"><%= @login.pass%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Status</td>
        <td class="itemValue"><%= @login.status%></td>
      </tr>
      
    </table>
  </div>

</div>
