<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @login.object %>
    <h1>Edit <%= @login.user%></h1>
    <%= link_to "Delete", :action => :delete, :id => @login.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @login.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="login[user]" value="<%= @login.user %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Pass: </td>
              <td class="itemValue"><input type="text" name="login[pass]" value="<%= @login.pass %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Status: </td>
              <td class="itemValue"><input type="text" name="login[status]" value="<%= @login.status %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
