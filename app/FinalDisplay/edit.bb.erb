<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @finaldisplay.object %>
    <h1>Edit <%= @finaldisplay.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @finaldisplay.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @finaldisplay.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="finaldisplay[id]" value="<%= @finaldisplay.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Value: </td>
              <td class="itemValue"><input type="text" name="finaldisplay[value]" value="<%= @finaldisplay.value %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Risk: </td>
              <td class="itemValue"><input type="text" name="finaldisplay[risk]" value="<%= @finaldisplay.risk %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Premium: </td>
              <td class="itemValue"><input type="text" name="finaldisplay[premium]" value="<%= @finaldisplay.premium %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
