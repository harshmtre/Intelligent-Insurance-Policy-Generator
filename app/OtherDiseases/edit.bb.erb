<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @otherdiseases.object %>
    <h1>Edit <%= @otherdiseases.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @otherdiseases.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @otherdiseases.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[id]" value="<%= @otherdiseases.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cancer: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[cancer]" value="<%= @otherdiseases.cancer %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Hiv: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[hiv]" value="<%= @otherdiseases.hiv %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Leprosy: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[leprosy]" value="<%= @otherdiseases.leprosy %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Rheumatism: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[rheumatism]" value="<%= @otherdiseases.rheumatism %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Tumor: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[tumor]" value="<%= @otherdiseases.tumor %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Gout: </td>
              <td class="itemValue"><input type="text" name="otherdiseases[gout]" value="<%= @otherdiseases.gout %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
