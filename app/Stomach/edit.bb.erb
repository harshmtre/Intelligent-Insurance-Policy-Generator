<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @stomach.object %>
    <h1>Edit <%= @stomach.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @stomach.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @stomach.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="stomach[id]" value="<%= @stomach.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Hepatitis: </td>
              <td class="itemValue"><input type="text" name="stomach[hepatitis]" value="<%= @stomach.hepatitis %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ulcer: </td>
              <td class="itemValue"><input type="text" name="stomach[ulcer]" value="<%= @stomach.ulcer %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Colitis: </td>
              <td class="itemValue"><input type="text" name="stomach[colitis]" value="<%= @stomach.colitis %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Piles: </td>
              <td class="itemValue"><input type="text" name="stomach[piles]" value="<%= @stomach.piles %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Anaemia: </td>
              <td class="itemValue"><input type="text" name="stomach[anaemia]" value="<%= @stomach.anaemia %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Jaundice: </td>
              <td class="itemValue"><input type="text" name="stomach[jaundice]" value="<%= @stomach.jaundice %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Dysentery: </td>
              <td class="itemValue"><input type="text" name="stomach[dysentery]" value="<%= @stomach.dysentery %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Gallstone: </td>
              <td class="itemValue"><input type="text" name="stomach[gallstone]" value="<%= @stomach.gallstone %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
