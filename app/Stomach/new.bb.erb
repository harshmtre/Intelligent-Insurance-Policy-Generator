<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Stomach</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @stomach.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="stomach[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Hepatitis: </td>
                <td class="itemValue"><input type="text" name="stomach[hepatitis]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Ulcer: </td>
                <td class="itemValue"><input type="text" name="stomach[ulcer]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Colitis: </td>
                <td class="itemValue"><input type="text" name="stomach[colitis]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Piles: </td>
                <td class="itemValue"><input type="text" name="stomach[piles]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Anaemia: </td>
                <td class="itemValue"><input type="text" name="stomach[anaemia]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Jaundice: </td>
                <td class="itemValue"><input type="text" name="stomach[jaundice]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Dysentery: </td>
                <td class="itemValue"><input type="text" name="stomach[dysentery]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Gallstone: </td>
                <td class="itemValue"><input type="text" name="stomach[gallstone]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
