<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @bodilydefects.id %></h1>
    <a href="<%= url_for :action => :show, :id => @bodilydefects.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @bodilydefects.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bodilydefects.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="bodilydefects[id]" class="fieldLabel">Id</label>
            <input type="text" id="bodilydefects[id]" name="bodilydefects[id]" value="<%= @bodilydefects.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bodilydefects[handicap]" class="fieldLabel">Handicap</label>
            <input type="text" id="bodilydefects[handicap]" name="bodilydefects[handicap]" value="<%= @bodilydefects.handicap %>" <%= placeholder( "Handicap" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
