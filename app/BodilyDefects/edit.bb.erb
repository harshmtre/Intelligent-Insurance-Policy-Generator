<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @bodilydefects.object %>
    <h1>Edit <%= @bodilydefects.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @bodilydefects.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bodilydefects.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="bodilydefects[id]" value="<%= @bodilydefects.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Handicap: </td>
              <td class="itemValue"><input type="text" name="bodilydefects[handicap]" value="<%= @bodilydefects.handicap %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
